{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "python": "${workspaceFolder}/venv/bin/python", // Use "${workspaceFolder}/venv/Scripts/python.exe" on Windows
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_RUN_HOST": "localhost",
                "FLASK_RUN_PORT": "5000"
            },
            "args": [
                "run"
            ],
            "jinja": true
        }
    ]
}
